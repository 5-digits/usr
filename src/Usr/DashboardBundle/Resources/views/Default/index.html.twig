{% extends 'home.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>User section</h1>
        </div>
    </div>
    <div class="container">
        {% if errors  is not null %}
            {% for error in errors %}
                <div class="row">
                    Error : {{ error }}
                </div>
            {% endfor %}
        {% else %}
            <div class="row">
                Username : {{ user.username }}
            </div>
            <div class="row">
                Email : {{ user.email }}
            </div>
            <div class="row">
                Role : {{ role }}
            </div>
        {% endif %}
    </div>
    {% block data %}{% endblock %}
{% endblock %}
